[build-system]
requires = ["setuptools>=61", "setuptools_scm[toml]>=6.2"]
build-backend = "setuptools.build_meta"

[project]
name = "deepmd-pytorch"
dynamic = ["version"]
description = "Implementation of DeePMD-kit using PyTorch"
authors = [
  {name = "DP Technology"},
]
license = {file = "LICENSE"}
classifiers = [
    "Programming Language :: Python :: 3.8",
    "License :: OSI Approved :: GNU Lesser General Public License v3 (LGPLv3)",
]
dependencies = [
     'torch >= 2a',
     'tqdm',
     'h5py',
     'wandb',
     'tensorflow>=2.14.0',
     'deepmd-kit >= 2.2.7',
]
requires-python = ">=3.8"
readme = "README.md"
keywords = ["deepmd"]

[project.urls]
repository = "https://github.com/dptech-corp/deepmd-pytorch"

[project.scripts]
dp_pt = "deepmd_pt.entrypoints.main:main"

[tool.setuptools.packages.find]
include = ["deepmd_pt*"]

[tool.setuptools_scm]
write_to = "deepmd_pt/_version.py"

[tool.cibuildwheel]
test-command = ["dp_pt -h",]

[tool.isort]
profile = "black"
force_grid_wrap = 1

[tool.ruff]
select = [
    "E", # errors
    "F", # pyflakes
    "D", # pydocstyle
    "UP", # pyupgrade
    "C4", # flake8-comprehensions
    "RUF", # ruff
    "NPY", # numpy
]

ignore = [
    "E501", # line too long
    "F841", # local variable is assigned to but never used
    "E741", # ambiguous variable name
    "E402", # module level import not at top of file
    "D100", # TODO: missing docstring in public module
    "D101", # TODO: missing docstring in public class
    "D102", # TODO: missing docstring in public method
    "D103", # TODO: missing docstring in public function
    "D104", # TODO: missing docstring in public package
    "D105", # TODO: missing docstring in magic method
    "D205", # 1 blank line required between summary line and description
    "D401", # TODO: first line should be in imperative mood
    "D404", # TODO: first word of the docstring should not be This
]
ignore-init-module-imports = true

[tool.ruff.pydocstyle]
convention = "numpy"
